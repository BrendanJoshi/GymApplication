@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fitness Tracking System - Your Fitness Journey</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4a6bff;
            --secondary-color: #ff6b6b;
            --dark-color: #121212;
            --light-color: #1e1e1e;
            --text-light: #f1f1f1;
            --text-muted: #b0b0b0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--dark-color);
            color: var(--text-light);
        }

        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 120px 0;
        }

        .login-btn {
            background-color: transparent;
            border: 2px solid white;
            color: white;
            padding: 8px 20px;
            border-radius: 30px;
            transition: all 0.3s;
        }

            .login-btn:hover {
                background-color: white;
                color: var(--primary-color);
            }

        .cta-button {
            background-color: var(--secondary-color);
            color: white;
            padding: 12px 30px;
            border-radius: 30px;
            font-weight: bold;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
            border: none;
        }

            .cta-button:hover {
                background-color: #ff5252;
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
            }

        .feature-icon {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .bg-white,
        .bg-light {
            background-color: var(--light-color) !important;
        }

        .text-muted {
            color: var(--text-muted) !important;
        }

        .program-card {
            background-color: var(--dark-color);
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s;
            border: none;
            box-shadow: 0 5px 15px rgba(255, 255, 255, 0.05);
            color: var(--text-light);
        }

            .program-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);
            }

        .testimonial-img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 50%;
            border: 3px solid var(--primary-color);
        }

        footer.bg-dark {
            background-color: #000000 !important;
        }
    </style>

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">Fitness Tracking System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#programs">Programs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Identity/Account/Login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section text-center" id="home">
        <div class="container">
            <h1 class="display-3 fw-bold mb-4">Transform Your Body, Transform Your Life</h1>
            <p class="lead mb-5">Join thousands of people who have achieved their fitness goals with our personalized training programs</p>
            <a asp-action="PersonalInformation" asp-controller="FitnessPlus" asp-area="" class="cta-button">
                Choose a program
            </a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5 bg-white" id="features">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Why Choose Fitness Plus</h2>
                <p class="lead text-muted">We provide everything you need to succeed in your fitness journey</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-dumbbell"></i>
                    </div>
                    <h4>Personalized Workouts</h4>
                    <p class="text-muted">Customized workout plans tailored to your goals and fitness level.</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <h4>Nutrition & Diet Plans</h4>
                    <p class="text-muted">Expert-designed meal plans to complement your training.</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4>Progress Tracking</h4>
                    <p class="text-muted">Monitor your progress with our advanced tracking tools.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Programs Section -->
    <section class="py-5 bg-light" id="programs">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Our Programs</h2>
                <p class="lead text-muted">Find the perfect program for your goals</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card program-card h-100">
                        <img src="https://images.unsplash.com/photo-1534258936925-c58bed479fcb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1631&q=80" class="card-img-top" alt="Weight Loss">
                        <div class="card-body">
                            <h5 class="card-title">Weight Loss</h5>
                            <p class="card-text">Shed pounds and build confidence with our proven weight loss program.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card program-card h-100">
                        <img src="https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" class="card-img-top" alt="Muscle Building">
                        <div class="card-body">
                            <h5 class="card-title">Muscle Building</h5>
                            <p class="card-text">Gain strength and size with our muscle-building regimen.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card program-card h-100">
                        <img src="https://images.unsplash.com/photo-1545205597-3d9d02c29597?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" class="card-img-top" alt="Functional Fitness">
                        <div class="card-body">
                            <h5 class="card-title">Functional Fitness</h5>
                            <p class="card-text">Improve mobility and performance for everyday activities.</p>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
    </section>

    <footer class="py-4 bg-dark text-white">
        <div class="container text-center">
            <p class="mb-0">
                Designed And Developed By © Samip Bhattarai
                </p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>