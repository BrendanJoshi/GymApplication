@using System.Security.Claims
@using GymApplication.Data
@using GymApplication.Utilities
@using Microsoft.AspNetCore.Identity
@inject IUtility _Utility
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="app-header header-shadow">
    <div class="app-header__logo" style="flex-wrap:wrap;align-items:center;justify-content:center;">
        <a href="/">
        </a>
        <div class="header__pane ml-auto">
            <div>
                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="app-header__mobile-menu">
        <div>
            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </button>
        </div>
    </div>
    <div class="app-header__menu">
        <span>
            <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                <span class="btn-icon-wrapper">
                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                </span>
            </button>
        </span>
    </div>
    <div class="app-header__content" style="justify-content: space-between">

        <div class="app-header-right">
            <div class="header-btn-lg pr-0">
                <div class="widget-content p-0">
                    <div class="widget-content-wrapper">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="widget-content-left  ml-3 header-user-info" style="margin-right: 5px;">
                                <div class="widget-heading">
                                    Hello @User.FindFirstValue("FullName") !
                                </div>
                                <div class="widget-subheading">
                                    @User.FindFirstValue("Post")
                                    @* @User.FindFirstValue("SubofficeName") *@
                                </div>
                            </div>
                            <div class="widget-content-left">
                                <div class="btn-group">
                                    <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                        <img width="42" class="rounded-circle" src="/assets/images/avatars/No-Image.png" alt="">
                                        <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                    </a>

                                    <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                        <a class="nav-link text-dark" id="register" asp-area="Admin" asp-controller="Office" asp-action="UserList">प्रयोगकर्ता सुची</a>
                                        @* <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">पासवर्ड परिवर्तन गर्नुहोस्</a>
                                    <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Manage/Index">खाता व्यवस्थापन गर्नुहोस्</a> *@
                                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                        </form>
                                    </div>

                                    <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                        @*  <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">पासवर्ड परिवर्तन गर्नुहोस्</a>
                                    <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Manage/Index">खाता व्यवस्थापन गर्नुहोस्</a> *@
                                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                        </form>
                                    </div>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="widget-content-left">
                                <div class="btn-group">
                                    <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                        <img width="42" class="rounded-circle" src="/assets/images/avatars/No-Image.png" alt="">
                                        <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                    </a>
                                    <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





