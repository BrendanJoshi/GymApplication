@model BodyGoalViewModel

<div class="row page-titles mx-0">
    <div class="col-sm-12 p-md-0">
        <div class="welcome-text">
            <h4>Hi, welcome back!</h4>
            <span class="ml-1">Create Body Goal</span>
        </div>
    </div>
    <div class="col-sm-12 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Form</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Body Goal</a></li>
        </ol>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Create Body Goal</h4>
    </div>
    <div class="card-body">
        <form asp-action="CreateBodyGoal" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(model => model.Id)

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="font-weight-bold">Name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="font-weight-bold">Upload Image</label>
                    <input type="file" asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-success btn-sm text-white">
                    <i class="fa fa-save"></i> Save
                </button>
                <a asp-action="BodyGoals" class="btn btn-sm text-white" style="background-color:#424f63;">
                    <i class="fa fa-arrow-left" aria-hidden="true"> Back </i>
                </a>
            </div>
        </form>
    </div>
</div>
