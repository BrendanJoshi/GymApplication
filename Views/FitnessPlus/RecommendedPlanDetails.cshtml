@model RecommendDietAndExercisePlanViewModel

@{
    ViewData["Title"] = "Plan Details";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Recommended Plan for @Model.Name</h2>

        <div class="row">
            <div class="col-md-6">
                <h4>Diet Plan: @Model.DietName</h4>
                <p><strong>Duration:</strong> @Model.Duration</p>
                <div class="border rounded p-3 bg-light">
                    @Html.Raw(Model.DietPlan)
                </div>
            </div>

            <div class="col-md-6">
                <h4>Exercise Plan: @Model.ExerciseName</h4>
                <p><strong>Duration:</strong> @Model.ExeDuration</p>
                <div class="border rounded p-3 bg-light">
                    @Html.Raw(Model.ExercisePlan)
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a href="@Url.Action("Index", "RecommendedPlanDetails")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
