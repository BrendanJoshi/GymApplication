@model PersonalInformationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diet and Exercise Plan</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: #f2f2f2;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .plan-container {
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .plan-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
            margin-bottom: 20px;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
            line-height: 1.6;
        }
    </style>
</head>
<body>
    <div class="container plan-container">
        <div class="plan-header">
            <h1>Your Personalized Diet and Exercise Plan</h1>
            <p>Based on your selected preferences, see your detailed recommendations below.</p>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card p-4">
                    <div class="card-body">
                        <h2 class="card-title">Diet Plan</h2>
                        <div id="dietPlanText" class="card-text"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-4">
                    <div class="card-body">
                        <h2 class="card-title">Exercise Plan</h2>
                        <div id="exercisePlanText" class="card-text"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Retrieve values from the model (ensure these are numbers)
        var AgeGroupId = @Model.AgeGroupId;
        var BodyTypeId = @Model.BodyTypeId;
        var BodyGoalId = @Model.BodyGoalId;
        var TargetBodyId = @Model.TargetBodyId;
        var StepDietId = @Model.StepDietId;
        var StepWaterId = @Model.StepWaterId;
        var StepWorkoutId = @Model.StepWorkoutId;
        var AdditionalGoalId = @Model.AdditionalGoalId;
        var WorkoutFrequencyId = @Model.WorkoutFrequencyId;

        var key = `${AgeGroupId}-${BodyTypeId}-${BodyGoalId}-${TargetBodyId}-${StepDietId}-${StepWaterId}-${StepWorkoutId}-${AdditionalGoalId}-${WorkoutFrequencyId}`;

        var dietPlan = "";
        switch (key) {
            case "1-1-1-1-1-1-1-1-1":
                dietPlan = "Light vegetarian meals throughout the day with ample salads, fresh fruits, and lean protein sources. Focus on hydration and incorporate herbal teas. Include a balanced mix of complex carbohydrates and fibers. Enjoy smaller portions and frequent, healthy snacks.";
                break;
            case "2-2-1-2-1-2-2-2-2":
                dietPlan = "A balanced vegetarian diet with moderate protein intake and a variety of whole grains. Incorporate plenty of colorful vegetables and low-calorie fruits. Maintain hydration with water and unsweetened beverages, complemented by light exercise.";
                break;
            case "3-3-2-3-1-3-3-3-3":
                dietPlan = "High-protein vegetarian meals designed to support muscle building. Focus on legumes, nuts, seeds, and whole grains. Include a wide variety of vegetables and reduce refined sugars. Stay hydrated and eat small, frequent meals.";
                break;
            case "4-1-3-5-1-1-1-1-1":
                dietPlan = "A low-carb, high-fiber diet plan featuring lean proteins, green vegetables, and low-glycemic index foods. Emphasize portion control and consistent meal timing. Incorporate plenty of water and healthy fats from nuts and olive oil.";
                break;
            case "1-2-1-1-2-2-2-2-2":
                dietPlan = "A plant-based diet focusing on nutrient-dense foods like leafy greens, fruits, whole grains, and legumes. Ensure balanced macros with a slight caloric deficit to support weight loss. Hydrate regularly and use spices to enhance flavor.";
                break;
            case "2-3-2-3-1-1-1-1-1":
                dietPlan = "A protein-rich vegetarian diet with a focus on muscle gain. Incorporate protein sources such as tofu, beans, and lentils along with a variety of whole grains and vegetables. Maintain hydration and adjust portion sizes based on activity.";
                break;
            case "3-1-3-6-2-3-3-3-3":
                dietPlan = "A healthy balance of fats, proteins, and carbohydrates designed to support sustained energy. Focus on whole, minimally processed foods and include healthy fats like avocado and nuts. Prioritize hydration and nutrient timing around workouts.";
                break;
            case "4-2-1-1-1-1-1-1-1":
                dietPlan = "Simple vegetarian meals featuring a mix of fresh vegetables, fruits, whole grains, and lean proteins. Emphasize regular hydration and include a routine of light stretching and moderate cardio to support overall wellness.";
                break;
            case "1-3-2-3-2-3-3-3-3":
                dietPlan = "A vegetable-rich diet plan that incorporates seasonal produce, whole grains, and lean protein sources. Maintain hydration with water and herbal teas, and complement the diet with daily physical activity.";
                break;
            case "2-1-3-5-1-1-1-1-1":
                dietPlan = "Light meals with an emphasis on intermittent fasting. 
                Focus on lean, fresh ingredients and maintain strict portion control. 
                Include hydration strategies such as lemon water and herbal teas throughout the day.";
                break;
            default:
                       dietPlan = `
        <ul>
          <li><strong>Breakfast (7:00–9:00 AM):</strong> Oatmeal with almond butter and banana – provides energy and satiety (350 kcal).</li>
          <li><strong>Mid-Morning Snack (10:30 AM):</strong> Apple with almonds – fiber and healthy fats (200 kcal).</li>
          <li><strong>Lunch (12:30–1:30 PM):</strong> Grilled chicken, steamed broccoli, and quinoa with olive oil – muscle repair and energy (450 kcal).</li>
          <li><strong>Afternoon Snack (3:30 PM):</strong> Low-fat Greek yogurt with berries – protein and antioxidants (200 kcal).</li>
          <li><strong>Dinner (6:30–7:30 PM):</strong> Baked salmon, sweet potato, and sautéed spinach – omega-3 and nutrients (450 kcal).</li>
          <li><strong>Optional Evening Snack (9:00 PM):</strong> Whole-grain toast with peanut butter – small balanced option (150 kcal).</li>
          <li><strong>Tips:</strong>
            <ul>
              <li>Drink 8–10 cups of water daily.</li>
              <li>Practice portion control using hand measurements.</li>
              <li>Eat every 3–4 hours to avoid overeating.</li>
              <li>Limit processed foods.</li>
              <li>Allow 1–2 indulgences per week.</li>
            </ul>
          </li>
        </ul>`;
                break;
        }

        var exercisePlan = "";
        // New switch statement for exercise plan based on same key
        switch (key) {
            case "1-1-1-1-1-1-1-1-1":
                exercisePlan = "Engage in a combination of brisk walking for 30 minutes daily and light bodyweight exercises. Incorporate stretching and yoga to improve flexibility and balance.";
                break;
            case "2-2-1-2-1-2-2-2-2":
                exercisePlan = "Focus on a moderate intensity routine including 45 minutes of aerobic exercise, such as cycling or jogging, coupled with basic strength training exercises twice a week.";
                break;
            case "3-3-2-3-1-3-3-3-3":
                exercisePlan = "Prioritize strength training with free weights and resistance bands three times a week. Complement with HIIT sessions for 20 minutes to enhance endurance and boost metabolism.";
                break;
            case "4-1-3-5-1-1-1-1-1":
                exercisePlan = "Adopt a routine that includes daily low-impact cardio, such as walking or swimming, along with flexibility and balance exercises. Incorporate core strengthening routines to support overall fitness.";
                break;
            case "1-2-1-1-2-2-2-2-2":
                exercisePlan = "Include moderate aerobic exercises, like brisk walking and light jogging, combined with bodyweight strength training exercises. Focus on maintaining a steady pace and incorporate relaxation techniques.";
                break;
            case "2-3-2-3-1-1-1-1-1":
                exercisePlan = "Incorporate resistance training sessions focused on major muscle groups three times a week, supplemented by a 30-minute cardio session on alternate days. Emphasize proper form and gradual progression.";
                break;
            case "3-1-3-6-2-3-3-3-3":
                exercisePlan = "Engage in high-intensity interval training (HIIT) sessions two to three times per week. Combine these with moderate strength training and flexibility exercises to create a balanced routine.";
                break;
            case "4-2-1-1-1-1-1-1-1":
                exercisePlan = "Maintain daily low-impact cardio combined with regular stretching and yoga sessions. Focus on a balanced routine that promotes both cardiovascular health and muscular endurance.";
                break;
            case "1-3-2-3-2-3-3-3-3":
                exercisePlan = "Adopt a routine of daily moderate cardio exercises such as brisk walking or cycling, combined with light strength training exercises and flexibility routines to enhance overall fitness.";
                break;
            case "2-1-3-5-1-1-1-1-1":
                exercisePlan = "Integrate intermittent high-intensity bursts of exercise with steady-state cardio. Focus on short, effective sessions of strength training combined with interval training to maximize calorie burn.";
                break;
                default:
                exercisePlan = `
        <ul>
          <li><strong>Workout Frequency:</strong> 5 days a week, 45–60 minutes per session.</li>
          <li><strong>Day 1 (Strength):</strong> Full-body workout with squats, push-ups, rows, and planks.</li>
          <li><strong>Warm-up:</strong> Light jogging or jumping jacks for 5 minutes.</li>
          <li><strong>Sample Exercises:</strong>
            <ul>
              <li>Squats: 3 sets of 12 reps</li>
              <li>Push-ups: 3 sets of 10–15 reps</li>
              <li>Bent-over rows: 3 sets of 12 reps</li>
              <li>Planks: 3 sets, 30–60 seconds hold</li>
            </ul>
          </li>
          <li><strong>Cool-down:</strong> Stretching quads, chest, and back for 5 minutes.</li>
          <li><strong>Goal:</strong> Improve strength, endurance, and flexibility.</li>
        </ul>`;

                break;
        }

               document.getElementById("dietPlanText").innerHTML = dietPlan;
        document.getElementById("exercisePlanText").innerHTML = exercisePlan;

    </script>
</body>
</html>
