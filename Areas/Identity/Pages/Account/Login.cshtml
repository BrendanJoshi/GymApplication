@page
@model LoginModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div style="display: flex; width: 100%; height: 100vh; font-family: Arial, sans-serif; color: #ffffff;">
    <!-- Photo Section -->
    <div style="flex: 1; background-image: url('/gallery/customimages/header.png'); background-size: contain; background-position: center; background-repeat: no-repeat; background-color: #000;"></div>

    <!-- Login Form Section -->
    <div style="flex: 1; display: flex; justify-content: center; align-items: center; padding: 2rem; background: linear-gradient(135deg, rgba(26, 26, 26, 0.8), rgba(0, 0, 0, 0.8));">
        <div style="width: 100%; max-width: 400px;">
            <form id="account" method="post" style="display: flex; flex-direction: column; gap: 1.5rem; padding: 2rem; background-color: rgba(58, 58, 58, 0.9); border-radius: 8px;">
                <h1 style="text-align: center; margin-bottom: 1.5rem; font-size: 2.5rem;">Log In</h1>

                <!-- Email Input -->
                <div>
                    <label asp-for="Input.Email" style="display: block; margin-bottom: 0.5rem; font-size: 0.9rem;">Email</label>
                    <input asp-for="Input.Email" style="width: 100%; padding: 0.75rem; border: none; border-radius: 4px; background-color: #3a3a3a; color: #ffffff; font-size: 1rem;" />
                    <span asp-validation-for="Input.Email" style="color: #ff6b6b; font-size: 0.8rem;"></span>
                </div>

                <!-- Password Input -->
                <div>
                    <label asp-for="Input.Password" style="display: block; margin-bottom: 0.5rem; font-size: 0.9rem;">Password</label>
                    <input asp-for="Input.Password" type="password" style="width: 100%; padding: 0.75rem; border: none; border-radius: 4px; background-color: #3a3a3a; color: #ffffff; font-size: 1rem;" />
                    <span asp-validation-for="Input.Password" style="color: #ff6b6b; font-size: 0.8rem;"></span>
                </div>

                <!-- Submit Button -->
                <button id="login-submit" type="submit" style="padding: 0.75rem; width: 100%; background: linear-gradient(135deg, #333333, #000000); color: #ffffff; border: none; border-radius: 4px; font-size: 1rem; font-weight: bold; cursor: pointer; transition: opacity 0.3s;">Log In</button>
            </form>

            <!-- Sign-Up Link -->
            <div style="text-align: center; margin-top: 1.5rem; font-size: 0.9rem; color: #ffffff;">
                Don't have an account? <a asp-area="Identity" asp-controller="Account" asp-action="Register" style="color: #4a90e2; text-decoration: none;">Sign Up</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
