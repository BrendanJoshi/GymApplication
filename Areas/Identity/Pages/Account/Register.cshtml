@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div style="display: flex; height: 100vh; background: linear-gradient(135deg, #1a1a1a, #000000); color: #ffffff; font-family: Arial, sans-serif; margin: 0;">
    <!-- Left Image Section -->
    <div style="flex: 1; background-image: url('/gallery/customimages/header.png'); background-size: contain; background-position: center; background-repeat: no-repeat; height: 100vh; width: 100vw;"></div>

    <!-- Right Form Section -->
    <div style="flex: 1; display: flex; justify-content: center; align-items: center; padding: 2rem;">
        <div style="width: 100%; max-width: 400px;">
            <h1 style="font-size: 2rem; margin-bottom: 1rem; text-align: center;">Sign Up</h1>
            <h2 style="font-size: 1.2rem; text-align: center; margin-bottom: 1rem;">Create a new account</h2>
            <hr style="border-color: #ffffff; margin-bottom: 2rem;">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="display: flex; flex-direction: column;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="margin-bottom: 1rem;">
                    <label asp-for="Input.FullName" style="font-size: 0.9rem; display: block; margin-bottom: 0.5rem;">Full Name</label>
                    <input asp-for="Input.FullName" class="form-control" autocomplete="username" placeholder="Full Name" style="width: 100%; padding: 0.75rem; border-radius: 4px; background-color: #3a3a3a; color: #ffffff; border: none;">
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div style="margin-bottom: 1rem;">
                    <label asp-for="Input.PhoneNumber" style="font-size: 0.9rem; display: block; margin-bottom: 0.5rem;">Phone Number</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" placeholder="Phone Number" style="width: 100%; padding: 0.75rem; border-radius: 4px; background-color: #3a3a3a; color: #ffffff; border: none;">
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div style="margin-bottom: 1rem;">
                    <label asp-for="Input.Email" style="font-size: 0.9rem; display: block; margin-bottom: 0.5rem;">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" style="width: 100%; padding: 0.75rem; border-radius: 4px; background-color: #3a3a3a; color: #ffffff; border: none;">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div style="margin-bottom: 1rem;">
                    <label asp-for="Input.Password" style="font-size: 0.9rem; display: block; margin-bottom: 0.5rem;">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" style="width: 100%; padding: 0.75rem; border-radius: 4px; background-color: #3a3a3a; color: #ffffff; border: none;">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div style="margin-bottom: 1rem;">
                    <label asp-for="Input.ConfirmPassword" style="font-size: 0.9rem; display: block; margin-bottom: 0.5rem;">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" style="width: 100%; padding: 0.75rem; border-radius: 4px; background-color: #3a3a3a; color: #ffffff; border: none;">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" style="width: 100%; padding: 0.75rem; border-radius: 4px; background: linear-gradient(135deg, #333333, #000000); color: #ffffff; font-weight: bold; cursor: pointer; border: none;">Register</button>
                <div style="flex: 1; display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #1a1a1a;">
                    <div style="text-align: center; font-size: 1rem; color: #ffffff; font-family: Arial, sans-serif;">
                        Already have an account?
                        <a href="Login" style="color: #4a90e2; text-decoration: none; font-weight: bold;">
                            Login
                        </a>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
